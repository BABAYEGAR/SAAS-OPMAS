@using Opmas.Data.Service.Enums
@model IEnumerable<Opmas.Data.Objects.Payment.PaymentAllowance>

@{
    ViewBag.Title = "List";
    ViewBag.Header = "Payment Allowance";
    ViewBag.Subheader = "List Of Payment Allowances";
    Layout = "~/Views/Shared/_LayoutListItems.cshtml";
}
@if (TempData["employmentallowance"] != null)
{
    if (TempData["notificationtype"].Equals(NotificationTypeEnum.Success.ToString()))
    {
        <div class="alert alert-success alert-dismissable">@TempData["employmentallowance"]</div>
    }
    else if (TempData["notificationtype"].Equals(NotificationTypeEnum.Error.ToString()))
    {
        <div class="alert alert-danger alert-dismissable">@TempData["employmentallowance"]</div>
    }
    else if (TempData["notificationtype"].Equals(NotificationTypeEnum.Info.ToString()))
    {
        <div class="alert alert-info alert-dismissable">@TempData["employmentallowance"]</div>
    }
}
@section add {
    @Html.ActionLink("Add data", "Create", null, new {@class = "btn btn-primary btn-xs fa fa-plus"})
}
<table id="datatable" class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>Action</th>
    </tr>
    </thead>

    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new {id = item.PaymentAllowanceId}, new {@class = "btn btn-xs btn-default fa fa-television"})
                @Html.ActionLink("Assign Positions", "AssignPosition", new { id = item.PaymentAllowanceId }, new { @class = "btn  btn-success btn-xs fa fa-tag" })
            </td>
        </tr>
    }
    </tbody>


</table>