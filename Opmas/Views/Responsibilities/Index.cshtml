@using Opmas.Data.Service.Enums
@model IEnumerable<Opmas.Data.Objects.Entities.Employee.Responsibility>

@{
    ViewBag.Title = "List";
    ViewBag.Header = "Appointment Responsibility";
    ViewBag.Subheader = "List Of Appointments Responsibilities";
    Layout = "~/Views/Shared/Layout/_LayoutListItems.cshtml";
}
@if (TempData["responsibility"] != null)
{
    if (TempData["notificationtype"].Equals(NotificationTypeEnum.Success.ToString()))
    {
        <div class="alert alert-success alert-dismissable">@TempData["responsibility"]</div>
    }
    else if (TempData["notificationtype"].Equals(NotificationTypeEnum.Error.ToString()))
    {
        <div class="alert alert-danger alert-dismissable">@TempData["responsibility"]</div>
    }
    else if (TempData["notificationtype"].Equals(NotificationTypeEnum.Info.ToString()))
    {
        <div class="alert alert-info alert-dismissable">@TempData["responsibility"]</div>
    }
}
@section add {
    @Html.ActionLink("Add data", "Create", null, new {@class = "btn btn-primary btn-xs fa fa-plus"})
}
<div class="table-responsive">
<table id="datatable" class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Institution.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Institution.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new {id = item.ResponsibilityId}, new {@class = "btn btn-xs btn-default fa fa-television"})
                @Html.ActionLink("Appoint Employee(s)", "AppointeeList", "Responsibilities", new { id = item.ResponsibilityId }, new { @class = "btn btn-xs btn-success fa fa-list" })
            </td>
        </tr>
    }
    </tbody>
</table>
    </div>
