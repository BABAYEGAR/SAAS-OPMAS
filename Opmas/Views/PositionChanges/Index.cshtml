@using Opmas.Data.Service.Enums
@model IEnumerable<Opmas.Data.Objects.Entities.Employee.PositionChange>

@{
    ViewBag.Title = "List";
    ViewBag.Header = "Position Change";
    ViewBag.Subheader = "List Of Promotions/Demotions";
    Layout = "~/Views/Shared/Layout/_LayoutListItems.cshtml";
}
@if (TempData["positionchange"] != null)
{
    if (TempData["notificationtype"].Equals(NotificationTypeEnum.Success.ToString()))
    {
        <div class="alert alert-success alert-dismissable">@TempData["positionchange"]</div>
    }
    else if (TempData["notificationtype"].Equals(NotificationTypeEnum.Error.ToString()))
    {
        <div class="alert alert-danger alert-dismissable">@TempData["positionchange"]</div>
    }
    else if (TempData["notificationtype"].Equals(NotificationTypeEnum.Info.ToString()))
    {
        <div class="alert alert-info alert-dismissable">@TempData["positionchange"]</div>
    }
}
<div class="table-responsive">
<table id="datatable" class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmploymentPosition.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Action)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmploymentPosition.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Action)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new {id = item.PositionChangeId}, new {@class = "btn btn-xs btn-default fa fa-television"})
            </td>
        </tr>
    }
    </tbody>
</table>
    </div>
