@using Opmas.Data.Service.Enums
@model IEnumerable<Opmas.Data.Objects.LeaveManagement.LeaveType>

@{
    ViewBag.Title = "List";
    ViewBag.Header = "Leave Types";
    ViewBag.Subheader = "List Of Leave Types";
    Layout = "~/Views/Shared/_LayoutListItems.cshtml";
}
@if (TempData["leavetype"] != null)
{
    if (TempData["notificationtype"].Equals(NotificationTypeEnum.Success.ToString()))
    {
        <div class="alert alert-success alert-dismissable">@TempData["leavetype"]</div>
    }
    else if (TempData["notificationtype"].Equals(NotificationTypeEnum.Error.ToString()))
    {
        <div class="alert alert-danger alert-dismissable">@TempData["leavetype"]</div>
    }
    else if (TempData["notificationtype"].Equals(NotificationTypeEnum.Info.ToString()))
    {
        <div class="alert alert-info alert-dismissable">@TempData["leavetype"]</div>
    }
}
@section add {
    @Html.ActionLink("Add data", "Create", null, new {@class = "btn btn-primary btn-xs fa fa-plus"})
}
<table id="datatable" class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new {id = item.LeaveTypeId}, new {@class = "btn btn-xs btn-default fa fa-television"})
            </td>
        </tr>
    }
    </tbody>
</table>