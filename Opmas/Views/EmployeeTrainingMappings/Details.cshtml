@using Opmas.Data.Objects.Entities.Employee
@using Opmas.Data.Objects.Entities.User
@model Opmas.Data.Objects.Mappings.EmployeeTrainingMapping
@{
    ViewBag.Title = "Details";
    ViewBag.Header = "Training Session";
    ViewBag.Subheader = "View training details";
    Layout = "~/Views/Shared/Layout/_LayoutForm.cshtml";
    var role = Session["role"] as Role;
    var loggedinuser = Session["opmasloggedinuser"] as AppUser;
}
<div>

    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.EmployeeTrainings.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmployeeTrainings.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EmployeeTrainings.Location)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmployeeTrainings.Location)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EmployeeTrainings.StartDate)
        </dt>

        <dd>
            @Model.EmployeeTrainings.StartDate.ToShortDateString()
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EmployeeTrainings.EndDate)
        </dt>

        <dd>
            @Model.EmployeeTrainings.EndDate.ToShortDateString()
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EmployeeTrainings.StartTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmployeeTrainings.StartTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EmployeeTrainings.EndTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmployeeTrainings.EndTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EmployeeTrainings.CoordinatorFullname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmployeeTrainings.CoordinatorFullname)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EmployeeTrainings.CoordinatorCompany)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmployeeTrainings.CoordinatorCompany)
        </dd>
        @if ((loggedinuser != null) && (loggedinuser.AppUserId == Model.CreatedBy))
        {
            <dt>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreatedBy)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DateCreated)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateCreated)
            </dd>

            <dt>
