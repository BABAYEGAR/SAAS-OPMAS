@using Opmas.Data.Service.Enums
@model IEnumerable<Opmas.Data.Objects.Mappings.EmployeeTrainingMapping>
@{
    ViewBag.Title = "List";
    ViewBag.Header = "Training";
    ViewBag.Subheader = "List Of My Trainings";
    Layout = "~/Views/Shared/_LayoutListItems.cshtml";
}
@if (TempData["training"] != null)
{
    if (TempData["notificationtype"].Equals(NotificationTypeEnum.Success.ToString()))
    {
        <div class="alert alert-success alert-dismissable">@TempData["training"]</div>
    }
    else if (TempData["notificationtype"].Equals(NotificationTypeEnum.Error.ToString()))
    {
        <div class="alert alert-danger alert-dismissable">@TempData["training"]</div>
    }
    else if (TempData["notificationtype"].Equals(NotificationTypeEnum.Info.ToString()))
    {
        <div class="alert alert-info alert-dismissable">@TempData["training"]</div>
    }
}
<table id="datatable" class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeTrainings.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeTrainings.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeTrainings.EndTime)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeTrainings.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeTrainings.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeTrainings.EndDate)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", "EmployeeTrainings", new {id = item.EmployeeTrainingId}, new {@class = "btn btn-xs btn-default"})
                @Html.ActionLink("Attendee list", "AttendeeList", "EmployeeTrainings", new {id = item.EmployeeTrainingId}, new {@class = "btn btn-xs btn-success"})
            </td>
        </tr>
    }
    </tbody>
</table>