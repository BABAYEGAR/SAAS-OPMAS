@model IEnumerable<Opmas.Data.Objects.Entities.SystemManagement.ApplicationNotification>
@{
    ViewBag.Title = "List";
    ViewBag.Header = "Notifications";
    ViewBag.Subheader = "List Of Notifications";
    Layout = "~/Views/Shared/Layout/_LayoutListItems.cshtml";
}
<div class="table-responsive">
    <table id="datatable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Read)
                </th>
                <th>
                    @Html.DisplayName("Date Sent")
                </th>
                <th>
                    @Html.DisplayName("Time Sent")
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @(Convert.ToBoolean(item.Read))
                    </td>
                    <td>
                        @(item.DateCreated.ToShortDateString())
                    </td>
                    <td>
                        @(item.DateCreated.ToShortTimeString())
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
