@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- page content -->
@model Opmas.Data.Objects.Entities.AccessManagement.Package
@using (Html.BeginForm("Create", "Package", FormMethod.Post, new {@class = "form"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "", new {@class = "text-danger"})
    <fieldset>
        <legend>New Package</legend>
        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.Name, new {@class = "control-label"})
            @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "form-control"}})
        </div>

        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.Amount, new {@class = "control-label"})
            @Html.EditorFor(model => model.Amount, new {htmlAttributes = new {@class = "form-control"}})
        </div>
        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.StartDate, new {@class = "control-label"})
            @Html.EditorFor(model => model.StartDate, new {htmlAttributes = new {@class = "form-control"}})
        </div>
        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.EndDate, new {@class = "control-label"})
            @Html.EditorFor(model => model.EndDate, new {htmlAttributes = new {@class = "form-control"}})
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success pull-right"/>
            </div>
        </div>
    </fieldset>
}

<!-- /page content -->