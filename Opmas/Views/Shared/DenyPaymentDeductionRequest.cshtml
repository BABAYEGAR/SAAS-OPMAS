@model Opmas.Data.Objects.Payment.PaymentDeductionRequest
@{
    ViewBag.Title = "Create";
    ViewBag.Header = "Deduction Request";
    ViewBag.Subheader = "Edit request";
    Layout = "~/Views/Shared/_LayoutModalForm.cshtml";
}
@using (Html.BeginForm("DenyRequest", "PaymentDeductionRequests", FormMethod.Post, new {@class = "form-horizontal form-label-left", id = "demo-form2", enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.PaymentDeductionRequestId)
    @Html.HiddenFor(m => m.EmployeeId)
    @Html.HiddenFor(m => m.InstitutionId)
    @Html.HiddenFor(m => m.DateCreated)
    @Html.HiddenFor(m => m.CreatedBy)
    @Html.HiddenFor(m => m.Amount)
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
    <div class="form-group">
        @Html.LabelFor(model => model.Comment, new {@class = "control-label col-md-3 col-sm-3 col-xs-12"})
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextAreaFor(model => model.Comment, new {htmlAttributes = new {@class = "form-control col-md-7 col-xs-12"}})
            @Html.ValidationMessageFor(model => model.Comment, "", new {@class = "text-danger"})
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary pull-right"/>
        </div>
    </div>
}