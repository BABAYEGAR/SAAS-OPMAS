@model Opmas.Data.Objects.Entities.Employee.EmployeePastWorkExperience

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutModalForm.cshtml";
}
@section css {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker.css" rel="stylesheet"/>
    <link href="~/Scripts/plugins/select2/css/select2.min.css" rel="stylesheet"/>
}

@using (Html.BeginForm("CreateSinglePastWorkExperience", "EmployeeManagement", FormMethod.Post, new {@class = "form-horizontal form-label-left", id = "demo-form2", enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "", new {@class = "text-danger"})
    <div class="form-group">
        @Html.LabelFor(m => m.EmployerName, new {@class = "control-label col-md-3 col-sm-3 col-xs-12"}) <span class="req">*</span>
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(m => m.EmployerName, null, new {@class = "form-control col-md-7 col-xs-12", placeholder = "Please enter employer name"})
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.EmployerLocation, new {@class = "control-label col-md-3 col-sm-3 col-xs-12"})<span class="req">*</span>
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextAreaFor(m => m.EmployerLocation, new {@class = "form-control col-md-7 col-xs-12", placeholder = "Please enter employerlocation"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.EmployerContact, new {@class = "control-label col-md-3 col-sm-3 col-xs-12"}) <span class="req">*</span>
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(m => m.EmployerContact, null, new {@class = "form-control col-md-7 col-xs-12", placeholder = "Please enter employer contact"})
        </div>
    </div>
    <div class="form-group">
        @Html.Label("StartDate", new {@class = "control-label col-md-3 col-sm-3 col-xs-12"})<span class="req">*</span>
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(m => m.StartDate, null, new {@class = "form-control startDate col-md-7 col-xs-12", placeholder = "Please select a start date"})
        </div>
    </div>

    <div class="form-group">
        @Html.Label("EndDate", "End Date:", new {@class = "control-label col-md-3 col-sm-3 col-xs-12"}) <span class="req">*</span>
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(m => m.EndDate, null, new {@class = "form-control endDate col-md-7 col-xs-12", placeholder = "Please select an end date"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.PositionHeld, new {@class = "control-label col-md-3 col-sm-3 col-xs-12"}) <span class="req">*</span>
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(m => m.PositionHeld, null, new {@class = "form-control col-md-7 col-xs-12", placeholder = "Please enter position held"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ReasonForLeaving, new {@class = "control-label col-md-3 col-sm-3 col-xs-12"})<span class="req">*</span>
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextAreaFor(m => m.ReasonForLeaving, new {@class = "form-control col-md-7 col-xs-12", placeholder = "Please enter reason for leaving"})
        </div>
    </div>

    <div class="modal-footer">
        <input type="submit" value="Create" class="btn btn-success pull-right"/>
    </div>
}


@section scripts {
    <script src="~/Scripts/plugins/moment/moment.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.min.js"></script>
    <script src="~/Scripts/plugins/select2/js/select2.min.js"></script>

    <script>

        $(document)
            .ready(function() {
                // Init select2 for dropdown select
                $('.select-dropdown').select2();
                // init datepicker for start date
                $('.startDate').datepicker();

                // init datepicker for end date
                $('.endDate').datepicker();

                // set start date of expiry based on selected date of end
                $('.startDate')
                    .datepicker()
                    .on('changeDate',
                        function(e) {

                            // apply selected date as start date for expiry
                            $('.endDate').datepicker('setStartDate', e.date);
                        });
            });
    </script>
}