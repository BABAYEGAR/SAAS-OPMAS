@using Opmas.Data.Service.Enums
@model Opmas.Data.Objects.Entities.SystemManagement.Institution
@section css {
    <link href="~/Scripts/plugins/select2/css/select2.min.css" rel="stylesheet" />
}
@using (Html.BeginForm("Create", "Institutions", FormMethod.Post, new { @class = "form-horizontal form-label-left", id = "demo-form2", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })<span class="req">*</span>
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12" } })
        </div>
    </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Motto, new { @class = "control-label  col-md-3 col-sm-3 col-xs-12" })<span class="req">*</span>
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.EditorFor(model => model.Motto, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12" } })
            </div>
        </div>
        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.Logo, new { @class = "control-label  col-md-3 col-sm-3 col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input type="file" name="logo" id="logo" style="width: 100%;" />
            </div>
        </div>
        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.Location, new { @class = "control-label  col-md-3 col-sm-3 col-xs-12" })<span class="req">*</span>
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12" } })
            </div>
        </div>

        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.ContactNumber, new { @class = "control-label  col-md-3 col-sm-3 col-xs-12" })<span class="req">*</span>
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.EditorFor(model => model.ContactNumber, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12" } })
            </div>
        </div>

        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.ContactEmail, new { @class = "control-label  col-md-3 col-sm-3 col-xs-12" })<span class="req">*</span>
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.EditorFor(model => model.ContactEmail, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12" } })
            </div>
        </div>
        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.AccessCode, new { @class = "control-label  col-md-3 col-sm-3 col-xs-12" })<span class="req">*</span>
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.EditorFor(model => model.AccessCode, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success pull-right" />
            </div>
        </div>

}
@section scripts {
    <script src="~/Scripts/plugins/select2/js/select2.min.js"></script>
    <script>
        $(document)
            .ready(function() {

                // Init select2 for dropdown select
                $('.select-dropdown').select2();
            });


    </script>
}