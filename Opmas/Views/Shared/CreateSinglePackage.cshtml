@section css {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker.css" rel="stylesheet"/>
    <link href="~/Scripts/plugins/select2/css/select2.min.css" rel="stylesheet"/>
}
@using Opmas.Data.Service.Enums
@model Opmas.Data.Objects.Entities.AccessManagement.Package
@using (Html.BeginForm("Create", "Package", FormMethod.Post, new {@class = "form-horizontal form-label-left", id = "demo-form2"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "", new {@class = "text-danger"})
    <div class="form-group">
        @Html.LabelFor(model => model.Name, new {@class = "control-label col-md-3 col-sm-3 col-xs-12"})<span class="req">*</span>
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "form-control col-md-7 col-xs-12"}})
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Amount, new {@class = "control-label col-md-3 col-sm-3 col-xs-12"})<span class="req">*</span>
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.EditorFor(model => model.Amount, new {htmlAttributes = new {@class = "form-control col-md-7 col-xs-12"}})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Amount, new {@class = "control-label col-md-3 col-sm-3 col-xs-12"})<span class="req">*</span>
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.DropDownListFor(m => m.Type, EnumHelper.GetSelectList(typeof(PackageType)), "select the package type", new {@class = "form-control select-dropdown col-md-7 col-xs-12"})
        </div>
    </div>
    <div class="ln_solid"></div>
    <div class="form-group">
        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
            <input type="submit" value="Create" class="btn btn-success pull-right"/>
        </div>
    </div>
}

@section scripts {
    <script src="~/Scripts/plugins/select2/js/select2.min.js"></script>

    <script>

        $(document)
            .ready(function() {
                // Init select2 for dropdown select
                $('.select-dropdown').select2();
            });
    </script>
}