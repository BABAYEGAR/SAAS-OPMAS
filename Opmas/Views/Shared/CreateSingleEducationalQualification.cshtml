@using Opmas.Data.Service.Enums
@model Opmas.Data.Objects.Entities.Employee.EmployeeEducationalQualification

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutModalForm.cshtml";
}
@using (Html.BeginForm("CreateSingleEducationalQualification", "EmployeeManagement", FormMethod.Post, new {@class = "form-horizontal form-label-left", id = "demo-form2", enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "", new {@class = "text-danger"})
    <div class="form-group">
        @Html.Label("Institution Name", new {@class = "control-label col-md-3 col-sm-3 col-xs-12"}) <span class="req">*</span>
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(m => m.InstitutionName, null, new {@class = "form-control col-md-7 col-xs-12", placeholder = "Please enter institution name"})
        </div>
    </div>


    <div class="form-group">
        @Html.Label("Location", new {@class = "control-label col-md-3 col-sm-3 col-xs-12"})<span class="req">*</span>
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(m => m.Location, null, new {@class = "form-control col-md-7 col-xs-12", placeholder = "Please enter institution location"})
        </div>
    </div>

    <div class="form-group">
        @Html.Label("StartDate", new {@class = "control-label col-md-3 col-sm-3 col-xs-12"})<span class="req">*</span>
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(m => m.StartDate, null, new {@class = "form-control startDate col-md-7 col-xs-12", placeholder = "Please select a start date"})
        </div>
    </div>

    <div class="form-group">
        @Html.Label("EndDate", "End Date:", new {@class = "control-label col-md-3 col-sm-3 col-xs-12"}) <span class="req">*</span>
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(m => m.EndDate, null, new {@class = "form-control endDate col-md-7 col-xs-12", placeholder = "Please selectan end date"})
        </div>
    </div>
    <div class="form-group">
        @Html.Label("DegreeAttained", "Degree Attained:", new {@class = "control-label col-md-3 col-sm-3 col-xs-12"}) <span class="req">*</span>
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.DropDownListFor(m => m.DegreeAttained, EnumHelper.GetSelectList(typeof(DegreeTypeEnum)), "select the degree you attained", new {@class = "form-control select-dropdown col-md-7 col-xs-12"})
        </div>
    </div>
    <div class="form-group">
        @Html.Label("ClassOfDegree", "Class Of Degree:", new {@class = "control-label col-md-3 col-sm-3 col-xs-12"}) <span class="req">*</span>
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.DropDownListFor(m => m.ClassOfDegree, EnumHelper.GetSelectList(typeof(ClassOfDegreeEnum)), "select your class of degree", new {@class = "form-control col-md-7 col-xs-12 select-dropdown "})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.FileUpload, new {@class = "control-label"})
        <input type="file" name="file" id="file" style="width: 100%;" class="form-control"/>
        @Html.ValidationMessageFor(model => model.FileUpload, "", new {@class = "text-danger"})


    </div>
    <div class="modal-footer">
        <input type="submit" value="Create" class="btn btn-success pull-right"/>
    </div>
}
