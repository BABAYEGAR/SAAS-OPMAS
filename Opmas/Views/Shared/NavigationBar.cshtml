@using Opmas.Data.DataContext.DataContext.SystemDataContext
@using Opmas.Data.Objects.Entities.User
@using Opmas.Data.Service.DateTimeHelper
@using Opmas.Data.Service.Enums
@{
    var loggedinuser = Session["opmasloggedinuser"] as AppUser;
    if (loggedinuser == null)
    {
        new HttpStatusCodeResult(HttpStatusCode.BadRequest);
        return;
    }
    var dbNotification = new ApplicationNotificationDataContext();
    var allNotifications = dbNotification.ApplicationNotifications.Where(n => (n.InstitutionId == loggedinuser.InstitutionId) && (n.AssignedTo == loggedinuser.EmployeeId));
}
<div class="top_nav">
    <div class="nav_menu">
        <nav>
            <div class="nav toggle">
                <a id="menu_toggle">
                    <i class="fa fa-bars"></i>
                </a>
            </div>
            @if (TempData["dashboard"] != null)
            {
                if (TempData["notificationtype"].Equals(NotificationTypeEnum.Success.ToString()))
                {
                    <div class="alert alert-success alert-dismissable">@TempData["dashboard"]</div>
                }
                else if (TempData["notificationtype"].Equals(NotificationTypeEnum.Error.ToString()))
                {
                    <div class="alert alert-danger alert-dismissable">@TempData["dashboard"]</div>
                }
                else if (TempData["notificationtype"].Equals(NotificationTypeEnum.Info.ToString()))
                {
                    <div class="alert alert-info alert-dismissable">@TempData["dashboard"]</div>
                }
            }
            <ul class="nav navbar-nav navbar-right">
                <li class="">
                    <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                        <img src="~/UploadedFiles/ProfileImage/@loggedinuser.AppUserImage" alt="">@loggedinuser.Firstname
                        <span class="fa fa-angle-down"></span>
                    </a>
                    <ul class="dropdown-menu dropdown-usermenu pull-right">
                        <li>
                            <a href="@Url.Action("ViewProfile", "AppUsers", new {id = loggedinuser.AppUserId})"> Profile</a>
                        </li>
                        <li>
                            <a href="javascript:;">
                                <span class="badge bg-red pull-right">50%</span>
                                <span>Settings</span>
                            </a>
                        </li>
                        <li>
                            <a href="javascript:;">Help</a>
                        </li>

                        <li>
                            <a href="@Url.Action("LogOff", "Account")"><i class="fa fa-sign-out pull-right"></i> Log Out</a>
                        </li>
                    </ul>
                </li>

                <li role="presentation" class="dropdown">
                    <a href="javascript:;" class="dropdown-toggle info-number" data-toggle="dropdown" aria-expanded="false">
                        <i class="fa fa-envelope-o"></i>
                        <span class="badge bg-green">@allNotifications.ToList().Count</span>
                    </a>
                    <ul id="menu1" class="dropdown-menu list-unstyled msg_list" role="menu">
                        @foreach (var item in allNotifications)
                        {
                            <li>
                                @if (item.NotificationType == ApplicationNotificationType.Leave.ToString())
                                {
                                    <a href="@Url.Action("Details", "Leaves", new {id = item.ItemId})">
                                        <span class="image"><img src="~/Content/ManagementDashboard/production/images/img.jpg" alt="Profile Image" /></span>
                                        <span>
                                            <span>@loggedinuser.DisplayName</span>
                                            <span class="time">@(new DateTimeCalculator().TimeAgo(item.DateCreated))</span>
                                        </span>
                                        <span class="message">
                                            @item.Description
                                        </span>
                                    </a>
                                }
                                @if (item.NotificationType == ApplicationNotificationType.Training.ToString())
                                {
                                    <a href="@Url.Action("Details", "EmployeeTrainings", new {id = item.ItemId})">
                                        <span class="image"><img src="~/Content/ManagementDashboard/production/images/img.jpg" alt="Profile Image" /></span>
                                        <span>
                                            <span>@loggedinuser.DisplayName</span>
                                            <span class="time">@(new DateTimeCalculator().TimeAgo(item.DateCreated))</span>
                                        </span>
                                        <span class="message">
                                            @item.Description
                                        </span>
                                    </a>
                                }
                                @if (item.NotificationType == ApplicationNotificationType.PaymentDeductionRequest.ToString())
                                {
                                    <a href="@Url.Action("Details", "PaymentDeductionRequests", new {id = item.ItemId})">
                                        <span class="image"><img src="~/Content/ManagementDashboard/production/images/img.jpg" alt="Profile Image" /></span>
                                        <span>
                                            <span>@loggedinuser.DisplayName</span>
                                            <span class="time">@(new DateTimeCalculator().TimeAgo(item.DateCreated))</span>
                                        </span>
                                        <span class="message">
                                            @item.Description
                                        </span>
                                    </a>
                                }
                            </li>
                            <li>
                                <div class="text-center">
                                    <a>
                                        <strong>See All Alerts</strong>
                                        <i class="fa fa-angle-right"></i>
                                    </a>
                                </div>
                            </li>
                        }
                    </ul>
                </li>
            </ul>
        </nav>
    </div>
</div>