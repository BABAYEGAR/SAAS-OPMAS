@using Opmas.Data.Service.Enums
@model Opmas.Models.LoginViewModel
@{
    Layout = "~/Views/Shared/Layout/_LayoutLogin.cshtml";
    ViewBag.Title = "Login";
}
@if (TempData["login"] != null)
{
    if (TempData["notificationtype"].Equals(NotificationTypeEnum.Success.ToString()))
    {
        <div class="alert alert-success alert-dismissable">@TempData["login"]</div>
    }
    else if (TempData["notificationtype"].Equals(NotificationTypeEnum.Error.ToString()))
    {
        <div class="alert alert-danger alert-dismissable">@TempData["login"]</div>
    }
    else if (TempData["notificationtype"].Equals(NotificationTypeEnum.Info.ToString()))
    {
        <div class="alert alert-info alert-dismissable">@TempData["login"]</div>
    }
}
@if (TempData["reg"] != null)
{
    if (TempData["notificationtype"].Equals(NotificationTypeEnum.Success.ToString()))
    {
        <div class="alert alert-success alert-dismissable">@TempData["reg"]</div>
    }
    else if (TempData["notificationtype"].Equals(NotificationTypeEnum.Error.ToString()))
    {
        <div class="alert alert-danger alert-dismissable">@TempData["reg"]</div>
    }
    else if (TempData["notificationtype"].Equals(NotificationTypeEnum.Info.ToString()))
    {
        <div class="alert alert-info alert-dismissable">@TempData["reg"]</div>
    }
}
@if (TempData["regerror"] != null)
{
    if (TempData["notificationtype"].Equals(NotificationTypeEnum.Success.ToString()))
    {
        <div class="alert alert-success alert-dismissable">@TempData["regerror"]</div>
    }
    else if (TempData["notificationtype"].Equals(NotificationTypeEnum.Error.ToString()))
    {
        <div class="alert alert-danger alert-dismissable">@TempData["regerror"]</div>
    }
    else if (TempData["notificationtype"].Equals(NotificationTypeEnum.Info.ToString()))
    {
        <div class="alert alert-info alert-dismissable">@TempData["regerror"]</div>
    }
}
@using (Html.BeginForm("Login", "Account", new {ViewBag.ReturnUrl}, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "", new {@class = "text-danger"})
    <h1>Login</h1>
    <div>
        @Html.TextBoxFor(m => m.Email, new {@class = "form-control", placeholder = "Enter Your Email"})
    </div>
    <div>
        @Html.PasswordFor(m => m.Password, new {@class = "form-control", placeholder = "Enter your password"})
    </div>
    <div>
        @Html.CheckBoxFor(m => m.RememberMe)
        @Html.LabelFor(m => m.RememberMe)

    </div>
    <div>
        <input type="submit" value="Login" class="btn btn-success btn-block" style="margin-left: 0;"/>
    </div>
    <div class="clearfix"></div>

    <div class="separator">
        <p class="change_link">
            @Html.ActionLink("Back To Home Page", "Index", "Home", null, new {@class = "btn btn-xs btn-default"})
        </p>

        <p class="change_link">
            <a href="#">Lost your password?</a>
        </p>
        <p class="change_link">
            A New Employee? <a href="@Url.Action("SelectInstitution", "Home")" style="color: green; font-weight: bolder">Register Here!</a>
        </p>

        <div class="clearfix"></div>
        <br/>

        <div>
            <h1>
                <i class="fa fa-paw"></i> OPMaS!
            </h1>
            <p>©2016 All Rights Reserved. OPMaS!. Privacy and Terms</p>
        </div>
    </div>
}