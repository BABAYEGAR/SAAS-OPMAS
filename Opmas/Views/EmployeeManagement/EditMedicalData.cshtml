@using Opmas.Data.Service.Enums
@model Opmas.Data.Objects.Entities.Employee.EmployeeMedicalData
@{
    ViewBag.Title = "Edit";
    ViewBag.Header = "Medical Data";
    ViewBag.Subheader = "Edit Medical Data";
    Layout = "~/Views/Shared/_LayoutUserForm.cshtml";
}

@section css {
    <link href="~/Scripts/plugins/bootstrap-datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet"/>
<link href="~/Scripts/plugins/select2/css/select2.min.css" rel="stylesheet" />
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("EditMedicalData", "EmployeeManagement", FormMethod.Post, new { @class = "form-horizontal form-label-left", id = "demo-form2", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new {@class = "text-danger"})
                @Html.HiddenFor(m=>m.EmployeeId)
                @Html.HiddenFor(m=>m.EmployeeMedicalDataId)
                    <div class="form-group">
                        @Html.LabelFor(m => m.BloodGroup, new {@class = "control-label control-label col-md-3 col-sm-3 col-xs-12" }) <span class="req">*</span>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DropDownListFor(n=>n.BloodGroup, EnumHelper.GetSelectList(typeof(BloodGroup)), new { @class = "form-control select-dropdown col-md-7 col-xs-12" })
                            </div>
                        </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Genotype, new {@class = "control-label col-md-3 col-sm-3 col-xs-12" })<span class="req">*</span>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DropDownListFor(n=>n.Genotype, EnumHelper.GetSelectList(typeof(Genotype)), new { @class = "form-control select-dropdown col-md-7 col-xs-12" })
                        </div>
                        </div>
                <div class="col-md-12">
                    <input type="submit" value="Update"  class="btn btn-primary pull-right"/>
                </div>
            }
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/plugins/moment/moment.js"></script>
    <script src="~/Scripts/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script>

        $(document)
            .ready(function() {
                $('.startDate').datepicker({ 'endDate': new Date() });
                // Init select2 for dropdown select
                $('.select-dropdown').select2();

            });
    </script>
}