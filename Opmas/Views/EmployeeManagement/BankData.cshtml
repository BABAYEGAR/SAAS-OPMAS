@using Opmas.Data.Objects.Entities.Employee
@using Opmas.Data.Service.Enums
@model EmployeeBankData
@{
    ViewBag.Title = "Step Four: Employee Bank Data";
    ViewBag.HeaderClass = "page-header";
}
@{
    var employee = Session["Employee"] as Employee;
    var bankData = employee.EmployeeBankDatas;
}
<header class="@ViewBag.HeaderClass">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="tagline">@ViewBag.Title</h2>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row hidden-xs">
        <ul class="progressbar">
            <li>
                Step One <br />
                <small>Personal Data</small>

            </li>
            <li>
                Step Two <br />
                <small>Educational Qualification</small>
            </li>
            <li>
                Step Three <br />
                <small>Past Work Experience</small>
            </li>
            <li class="active">
                Step Four <br />
                <small>Bank Data</small>
            </li>
            <li>
                Step Five <br />
                <small>Medical Data</small>

            </li>
            <li>
                Confirmation <br />
                <small>Review of Employee Info</small>
            </li>
            <li>
                Completed <br />
                <small>Registration Complete</small>
            </li>
        </ul>
    </div>
    <hr/>
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("BankData", "EmployeeManagement", FormMethod.Post, new {@class = "form"}))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new {@class = "text-danger"})
                <fieldset>
                    <legend>Employee Bank Data</legend>

                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.BankName, new {@class = "control-label"}) <span class="req">*</span>
                        @Html.DropDownList("BankName", EnumHelper.GetSelectList(typeof(BanksEnum)), "select your bank", new {@class = "form-control select-dropdown"})
                    </div>
                    <div class="clearfix"></div>

                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.AccountName, new {@class = "control-label"})
                        @Html.TextBoxFor(m => m.AccountName, new {@class = "form-control", placeholder = "Please enter your account name"})
                    </div>

                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.AccountNumber, new {@class = "control-label"})
                        @Html.TextBoxFor(m => m.AccountNumber, new {@class = "form-control", placeholder = "Please enter your account number"})
                    </div>
                    <div class="clearfix"></div>

                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.AccountType, "Account Type:", new {@class = "control-label"}) <span class="req">*</span>
                        @Html.DropDownList("AccountType", EnumHelper.GetSelectList(typeof(AccountTypeEnum)), "select your account type", new {@class = "form-control select-dropdown", id = "Role"})
                    </div>
                    <div class="clearfix"></div>

                    <div class="form-group col-md-12">
                        <div class="table-responsive">
                            <table class="table table-condensed table-hover" id="appusers">
                                <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.BankName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AccountName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AccountNumber)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AccountType)
                                    </th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                    @if (bankData != null)
                                    {
                                        foreach (var item in bankData)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.BankName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.AccountName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.AccountNumber)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.AccountType)
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Edit", "Edit", new { id = item.FakeId }, new { @class = "btn btn-primary" }) |
                                                </td>

                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </fieldset>

                <hr/>

                <div class="col-md-12">

                    <a href="@Url.Action("PastWorkExperience", "EmployeeManagement")" class="btn btn-default">Back</a>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-default">Cancel</a>

                    <input type="submit" value="Add" class="btn btn-success pull-right" />
                    @if ((bankData != null) && (bankData.Count > 0))
                    {
                        <a href="@Url.Action("MedicalData", "EmployeeManagement")" class="btn btn-brown pull-right">Next</a>
                    }
                </div>
            }
        </div>
    </div>
</div>
