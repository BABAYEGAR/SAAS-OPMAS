@using Opmas.Data.Objects.Entities.Employee
@using Opmas.Data.Service.Enums
@model Opmas.Data.Objects.Entities.Employee.EmployeeFamilyData
@{
    ViewBag.Title = "Step four: Employee Family Data";
    ViewBag.HeaderClass = "page-header";
}
@{
    var employee = Session["Employee"] as Employee;
    var familyDataSession = employee?.EmployeeFamilyDatas;

    bool? returnUrl = ViewBag.returnUrl;
    if (returnUrl == null)
    {
        returnUrl = false;
    }
}
@section css {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker.css" rel="stylesheet" />
    <!-- Datatables -->
    <link href="~/Content/ManagementDashboard/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">


}
<header class="@ViewBag.HeaderClass">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="tagline">@ViewBag.Title</h2>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row hidden-xs">
        <ul class="progressbar">
            <li>
                Step One <br/>
                <small>Personal Data</small>

            </li>
            <li>
                Step Two <br/>
                <small>Educational Qualification</small>
            </li>
            <li class="active">
                Step Three <br/>
                <small>Past Work Experience</small>
            </li>
            <li>
                Step Four <br/>
                <small>Family Data</small>
            </li>
            <li>
                Step Five <br/>
                <small>Bank Data</small>
            </li>
            <li>
                Step Six <br/>
                <small>Medical/Work Data</small>

            </li>
            <li>
                Confirmation <br/>
                <small>Review of Employee Info</small>
            </li>
            <li>
                Completed <br/>
                <small>Registration Complete</small>
            </li>
        </ul>
    </div>
    <hr/>
    <div class="row">
        <div class="col-md-12">
            @if (TempData["family"] != null)
            {
                if (TempData["notificationtype"].Equals(NotificationTypeEnum.Success.ToString()))
                {
                    <div class="alert-success alert-dismissable">@TempData["family"]</div>
                }
                else if (TempData["notificationtype"].Equals(NotificationTypeEnum.Error.ToString()))
                {
                    <div class="alert-danger alert-dismissable">@TempData["family"]</div>
                }
                else if (TempData["notificationtype"].Equals(NotificationTypeEnum.Info.ToString()))
                {
                    <div class="alert-info alert-dismissable">@TempData["family"]</div>
                }
            }
            @using (Html.BeginForm("EmployeeFamilyData", "EmployeeManagement", FormMethod.Post, new {@class = "form"}))
            {
                @Html.Hidden("returnUrl", returnUrl)
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new {@class = "text-danger"})
                <fieldset>
                    <legend>Employee Family Data</legend>

                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.FullName, new {@class = "control-label"}) <span class="req">*</span>
                        @Html.TextBoxFor(m => m.FullName, new {@class = "form-control", placeholder = "Please enter the full name"})
                    </div>
                    <div class="clearfix"></div>

                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.Address, new {@class = "control-label"}) <span class="req">*</span>
                        @Html.TextAreaFor(m => m.Address, new {@class = "form-control", placeholder = "Please enter the address"})
                    </div>
                    <div class="form-group col-md-12">

                        @Html.LabelFor(m => m.ContactNumber, new {@class = "control-label"}) <span class="req">*</span>
                        @Html.TextBoxFor(m => m.ContactNumber, new {@class = "form-control", placeholder = "Please enter the contact"})
                    </div>
                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.Email, new {@class = "control-label"})<span class="req">*</span>
                        @Html.TextBoxFor(m => m.Email, new {@class = "form-control", placeholder = "Please select an email"})
                    </div>
                    <div class="clearfix"></div>

                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.DateOfBirth, "Date Of Birth:", new {@class = "control-label"}) <span class="req">*</span>
                        @Html.TextBoxFor(m => m.DateOfBirth, new {@class = "form-control dob", placeholder = "Please select the date of birth"})
                    </div>
                    <div class="clearfix"></div>

                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.Relationship, "Relationship:", new {@class = "control-label"}) <span class="req">*</span>
                        @Html.DropDownListFor(m => m.Relationship, EnumHelper.GetSelectList(typeof(DegreeTypeEnum)), "select the degree you attained", new { @class = "form-control select-dropdown" })
                    </div>
                    <div class="clearfix"></div>

                    <div class="form-group col-md-12">
                        @Html.LabelFor(m => m.NextOfKin, "Next Of Kin:", new { @class = "control-label" })
                        @Html.CheckBoxFor(m => m.NextOfKin, new { @class = "form-control" })
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group col-md-12">
                        <div class="table-responsive">
                            <table class="table table-condensed table-hover" id="datatable1">
                                <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.FullName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ContactNumber)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DateOfBirth)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Relationship)
                                    </th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                @if (familyDataSession != null)
                                {
                                    foreach (var item in familyDataSession)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FullName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ContactNumber)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </td>>
                                            <td>
                                                @item.DateOfBirth.ToShortDateString()
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Relationship)
                                            </td>
                                            <td>
                                                @if (returnUrl == true)
                                                {
                                                    @Html.ActionLink("Remove", "RemoveEmployeeFamilyData", new {fakeId = item.FakeId, returnUrl = true}, new {@class = "btn btn-danger"})
                                                }
                                                else
                                                {
                                                    @Html.ActionLink("Remove", "RemoveEmployeeFamilyData", new {item.FakeId}, new {@class = "btn btn-danger"})
                                                }
                                            </td>

                                        </tr>
                                    }
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </fieldset>

                <hr/>

                <div class="col-md-12">

                    <a href="@Url.Action("PastWorkExperience", "EmployeeManagement")" class="btn btn-default">Back</a>
                    <a href="@Url.Action("Login", "Account")" class="btn btn-default">Cancel</a>
                    <input type="submit" value="Add" class="btn btn-success"/>
                    @if ((familyDataSession != null) && (familyDataSession.Count > 0))
                    {
                        if (returnUrl == true)
                        {
                            <a href="@Url.Action("ReviewEmployeeData", "EmployeeManagement")" class="btn btn-default pull-right">Revert to review page</a>
                        }
                        else
                        {
                            <a href="@Url.Action("BankData", "EmployeeManagement")" class="btn btn-brown pull-right">Next</a>
                        }
                    }
                </div>
            }
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/plugins/moment/moment.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.min.js"></script>
    <script src="~/Content/ManagementDashboard/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/ManagementDashboard/vendors/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script>

        $(document)
            .ready(function() {

                // init datepicker for date of birth 
                $('.dob').datepicker({ 'endDate': new Date() });

                // Init select2 for dropdown select
                $('.select-dropdown').select2();
                //datatables
                $('#datatable1').DataTable();

            });
    </script>

}