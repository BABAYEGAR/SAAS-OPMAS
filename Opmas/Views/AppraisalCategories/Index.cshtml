@using Opmas.Data.Service.Enums
@model IEnumerable<Opmas.Data.Objects.PerformanceManagement.AppraisalCategory>
@{
    ViewBag.Title = "List";
    ViewBag.Header = "Appraisal Category";
    ViewBag.Subheader = "List Of Appraisal Categories";
    Layout = "~/Views/Shared/Layout/_LayoutListItems.cshtml";
}
@if (TempData["appraisalfactor"] != null)
{
    if (TempData["notificationtype"].Equals(NotificationTypeEnum.Success.ToString()))
    {
        <div class="alert alert-success alert-dismissable">@TempData["appraisalfactor"]</div>
    }
    else if (TempData["notificationtype"].Equals(NotificationTypeEnum.Error.ToString()))
    {
        <div class="alert alert-danger alert-dismissable">@TempData["appraisalfactor"]</div>
    }
    else if (TempData["notificationtype"].Equals(NotificationTypeEnum.Info.ToString()))
    {
        <div class="alert alert-info alert-dismissable">@TempData["appraisalfactor"]</div>
    }
}
@section add {
    @Html.ActionLink("Add data", "Create", null, new {@class = "btn btn-primary btn-xs fa fa-plus"})
}
<table id="datatable" class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaximumScore)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CurrentScore)
        </th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaximumScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentScore)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new {id = item.AppraisalCategoryId}, new {@class = "btn btn-xs btn-default fa fa-television"})
                @Html.ActionLink("Asign To Positon(s)", "AssignPosition", "AppraisalCategories", new { id = item.AppraisalCategoryId }, new { @class = "btn btn-xs btn-success fa fa-list" })
            </td>
        </tr>
    }
    </tbody>
</table>