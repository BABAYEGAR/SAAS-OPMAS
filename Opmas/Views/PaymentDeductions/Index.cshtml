@using Opmas.Data.Service.Enums
@model IEnumerable<Opmas.Data.Objects.Payment.PaymentDeduction>

@{
    ViewBag.Title = "List";
    ViewBag.Header = "Payment Deduction";
    ViewBag.Subheader = "List Of Payment Deduction";
    Layout = "~/Views/Shared/Layout/_LayoutListItems.cshtml";
}
@if (TempData["deduction"] != null)
{
    if (TempData["notificationtype"].Equals(NotificationTypeEnum.Success.ToString()))
    {
        <div class="alert alert-success alert-dismissable">@TempData["deduction"]</div>
    }
    else if (TempData["notificationtype"].Equals(NotificationTypeEnum.Error.ToString()))
    {
        <div class="alert alert-danger alert-dismissable">@TempData["deduction"]</div>
    }
    else if (TempData["notificationtype"].Equals(NotificationTypeEnum.Info.ToString()))
    {
        <div class="alert alert-info alert-dismissable">@TempData["deduction"]</div>
    }
}
@section add {
    @Html.ActionLink("Add data", "Create", null, new {@class = "btn btn-primary btn-xs fa fa-plus"})
}
<div class="table-responsive">
<table id="datatable" class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayName("Rate (%)")
        </th>
        <th>Action</th>
    </tr>
    </thead>

    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @(item.Rate + "%")
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new {id = item.PaymentDeductionId}, new {@class = "btn btn-xs btn-default fa fa-television"})
                @Html.ActionLink("Assign Positions", "AssignPosition", new {id = item.PaymentDeductionId}, new {@class = "btn btn-xs btn-success fa fa-tag"})
            </td>
        </tr>
    }
    </tbody>


</table>
    </div>
