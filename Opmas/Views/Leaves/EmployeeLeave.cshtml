@using Opmas.Data.Service.Enums
@model IEnumerable<Opmas.Data.Objects.LeaveManagement.Leave>

@{
    ViewBag.Title = "List";
    ViewBag.Header = "Leaves";
    ViewBag.Subheader = "List Of my Leaves";
    Layout = "~/Views/Shared/_LayoutListItems.cshtml";
}
@if (TempData["leave"] != null)
{
    if (TempData["notificationtype"].Equals(NotificationTypeEnum.Success.ToString()))
    {
        <div class="alert alert-success alert-dismissable">@TempData["leave"]</div>
    }
    else if (TempData["notificationtype"].Equals(NotificationTypeEnum.Error.ToString()))
    {
        <div class="alert alert-danger alert-dismissable">@TempData["leave"]</div>
    }
    else if (TempData["notificationtype"].Equals(NotificationTypeEnum.Info.ToString()))
    {
        <div class="alert alert-info alert-dismissable">@TempData["leave"]</div>
    }
}
@section add {
    @Html.ActionLink("Add data", "Create", null, new { @class = "btn btn-primary btn-xs fa fa-plus" })
}
<table id="datatable" class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Employee.EmployeeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LeaveType.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.EmployeeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LeaveType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.LeaveId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.LeaveId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.LeaveId })
                </td>
            </tr>
        }
    </tbody>
</table>
