@using System.Data.Entity
@using Opmas.Controllers.ApplicationManagement
@using Opmas.Data.DataContext.DataContext.EmployeeDataContext
@using Opmas.Data.Objects.Entities.SystemManagement
@using Opmas.Data.Objects.LeaveManagement
@model IEnumerable<InstitutionQualification>

@{
    ViewBag.Title = "List";
    ViewBag.Header = "Qualification";
    ViewBag.Subheader = "List Of Institution Qualification";
    Layout = "~/Views/Shared/Layout/_LayoutListItems.cshtml";
    var qualification = new InstitutionQualification();
}
@section add {
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary btn-xs fa fa-plus" data-toggle="modal" data-target="#myModal">
        Add Qualification
    </button>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">Create an Educational Qualification</h4>
                </div>
                <div class="modal-body">
                    @{
                        Html.RenderPartial("InstitutionManagement/CreateQualification",qualification);
                    }
                </div>
            </div>
        </div>

    </div>
}
<div class="table-responsive">
<table id="datatable" class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>Action</th>
    </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new {id = item.InstitutionQualificationId}, new {@class = "btn btn-default btn-xs fa fa-television"})
            </td>
        </tr>
    }
    
</table>
    </div>
