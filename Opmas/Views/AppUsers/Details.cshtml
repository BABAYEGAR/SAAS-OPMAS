@using Opmas.Data.Objects.Entities.User
@using Opmas.Data.Service.Enums
@model Opmas.Data.Objects.Entities.User.AppUser


@{
    var loggedinuser = Session["opmasloggedinuser"] as AppUser;
    if (loggedinuser != null)
    {
        if (loggedinuser.Role == AdminUserType.SystemAdministrator.ToString())
        {
            Layout = "~/Views/Shared/_LayoutSystemAdminForm.cshtml";
            ViewBag.Title = "Details";
            ViewBag.Header = "Application Users";
            ViewBag.Subheader = "View application user details";
        }
        if (loggedinuser.Role == AdminUserType.InstitutionAdministrator.ToString())
        {
            Layout = "~/Views/Shared/_LayoutInstitutionAdminForm.cshtml";
            ViewBag.Title = "Details";
            ViewBag.Header = "Application Users";
            ViewBag.Subheader = "View application user details";
        }
    }
}


